        <locationX>176</locationX>
        <locationY>791</locationY>
        <inputAssignments>
            <field>Family__c</field>
            <value>
                <elementReference>Get010.Id</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
